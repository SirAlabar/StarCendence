{
  "name": "fastify-ws-redis",
  "version": "1.0.0",
  "description": "Minimal Fastify server with WebSocket and Redis pub/sub",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec tsx src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "fastify",
    "websocket",
    "redis",
    "real-time"
  ],
  "author": "ft_transcendence",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.0",
    "@fastify/websocket": "^10.0.1",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ws": "^8.16.0",
    "nodemon": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
