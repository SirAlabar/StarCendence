    "dotenv": "^16.3.1",
    "fastify": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "nodemon": "^3.0.1",
    "prisma": "^5.22.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
